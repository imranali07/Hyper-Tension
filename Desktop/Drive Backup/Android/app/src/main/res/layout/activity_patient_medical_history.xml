<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.simpleapp.Activities.PatientMedicalHistoryActivity">

    <RelativeLayout
        android:id="@+id/heading_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/text_view_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient's Medical History"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textAllCaps="false"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_heading"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/colorTextHint"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_patient_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading_layout">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/button_Next_patient_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:background="@color/colorLightBlue"
        android:text="Next"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:drawableStart="@drawable/tick"/>

</RelativeLayout>
